function scrollLeft() {
    const container = document.querySelector('.category-slider');
    container.scrollLeft -= 200; // يمكن تعديل الرقم حسب الحاجة
}

function scrollRight() {
    const container = document.querySelector('.category-slider');
    container.scrollLeft += 200; // يمكن تعديل الرقم حسب الحاجة
}
